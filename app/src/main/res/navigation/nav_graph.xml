<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.movieapp.presentation.MovieListFragment"
        android:label="Movies"
        tools:layout="@layout/fragment_movie_list" >
        <action
            android:id="@+id/action_movieListFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
        <argument
            android:name="Movie"
            app:argType="com.example.movieapp.data.network.Movie" />
        <argument
            android:name="MovieId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.movieapp.presentation.MovieDetailFragment"
        android:label="Movie Details"
        tools:layout="@layout/fragment_movie_detail" />
    <fragment
        android:id="@+id/movieFavoriteListFragment"
        android:name="com.example.movieapp.presentation.FavoriteMovieListFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorite_movie_list" >
        <action
            android:id="@+id/action_movieFavoriteListFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
</navigation>